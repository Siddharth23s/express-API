<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>My Shop</title>
<style>
body{font-family:Arial;text-align:center;margin:20px}
.container{max-width:800px;margin:auto;border:1px solid #000;padding:20px}
h1{font-size:32px;margin-bottom:10px}
h2{margin-top:20px}
.products{display:flex;justify-content:center;gap:20px;margin:20px 0}
.product{border:1px solid #ccc;border-radius:10px;padding:20px;width:150px}
.product h3{font-size:18px}
.cart-item{display:flex;justify-content:center;align-items:center;gap:10px;margin:5px 0}
input[type=number]{width:40px;text-align:center}
button{cursor:pointer;padding:5px 10px}
</style>
</head>
<body>
<div class="container">
<h1>My Shop</h1>
<h2>Products</h2>
<div class="products">
<div class="product"><h3>Laptop</h3><p>$1200</p><button onclick="addToCart('Laptop',1200)">Add to Cart</button></div>
<div class="product"><h3>Mouse</h3><p>$25</p><button onclick="addToCart('Mouse',25)">Add to Cart</button></div>
<div class="product"><h3>Keyboard</h3><p>$45</p><button onclick="addToCart('Keyboard',45)">Add to Cart</button></div>
</div>
<h2>Shopping Cart</h2>
<div id="cart"></div>
</div>
<script>
let cart=[]
function addToCart(name,price){let item=cart.find(i=>i.name===name);if(item){item.quantity++}else{cart.push({name,price,quantity:1})}renderCart()}
function removeItem(name){cart=cart.filter(i=>i.name!==name);renderCart()}
function updateQuantity(name,quantity){let item=cart.find(i=>i.name===name);if(item){item.quantity=quantity>0?quantity:1}renderCart()}
function renderCart(){let cartDiv=document.getElementById('cart');cartDiv.innerHTML='';cart.forEach(i=>{let div=document.createElement('div');div.className='cart-item';div.innerHTML=`${i.name} ($${i.price}) <input type='number' min='1' value='${i.quantity}' onchange="updateQuantity('${i.name}',this.value)"> <button onclick="removeItem('${i.name}')">Remove</button>`;cartDiv.appendChild(div)})}
</script>
</body>
</html>
